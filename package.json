{
  "name": "product-tracker-api-cd",
  "version": "1.0.0",
  "description": "Simple 4-hour price alert API built with TDD",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "test": "jest --setupFilesAfterEnv ./tests/setup.js",
    "test:unit": "jest tests/unit --setupFilesAfterEnv ./tests/setup.js",
    "test:integration": "jest tests/integration --setupFilesAfterEnv ./tests/setup.js",
    "test:watch": "jest --setupFilesAfterEnv ./tests/setup.js --watch",
    "build": "echo 'Build complete - MVC structure ready'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src/**/*.js tests/**/*.js app.js",
    "lint:fix": "eslint src/**/*.js tests/**/*.js app.js --fix",
    "check": "npm run format:check && npm run lint && npm test"
  },
  "keywords": [
    "api",
    "price-tracker",
    "alerts",
    "tdd",
    "simple"
  ],
  "author": "craid",
  "license": "ISC",
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "csrf": "^3.1.0",
    "express": "^4.18.2",
    "helmet": "^8.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "jest": "^29.0.0",
    "prettier": "^3.6.2",
    "supertest": "^6.3.0"
  }
}
